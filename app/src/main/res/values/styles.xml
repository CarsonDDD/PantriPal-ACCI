<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/orange</item>

        <!-- Status bar color. -->
        <item name="colorPrimaryDark">@color/orange</item>

        <item name="colorAccent">@color/sky_blue</item>

        <item name="android:windowBackground">@color/light_grey</item>

        <item name="android:textColor">@color/dark_grey</item>

        <item name="fontFamily">@font/roboto</item>

        <item name="bottomNavigationStyle">@style/BottomNavigationTheme</item>

        <item name="toolbarStyle">@style/ToolbarTheme</item>

        <item name="android:buttonStyle">@style/ButtonTheme</item>


    </style>

    <!-- Tool bar -->
    <style name="ToolbarTheme" parent="@style/Widget.AppCompat.Toolbar">
        <item name="android:background">@color/orange</item>
        <item name="titleTextAppearance">@style/TextAppearance.MyApp.Toolbar.Title</item>
        <item name="android:paddingBottom">0dp</item>
    </style>

    <style name="TextAppearance.MyApp.Toolbar.Title" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">@dimen/toolbar_text</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>


    <!-- Nav bar-->
    <style name="BottomNavigationTheme" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.BottomNavigationView</item>
    </style>

    <style name="ThemeOverlay.App.BottomNavigationView" parent="">
        <item name="colorPrimary">@color/orange_dark</item>
        <item name="colorOnPrimary">@color/dark_grey</item>
    </style>


    <!-- buttons -->
    <style name="ButtonTheme" parent="@android:style/Widget.Button">
        <item name="android:colorPrimary">@color/sky_blue</item>
        <item name="android:background">@color/sky_blue</item>
        <item name="android:textColor">@color/white</item>
        <item name="colorOnBackground">@color/sky_blue</item>
    </style>




</resources>
