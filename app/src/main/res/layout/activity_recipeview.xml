<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.fragments.RecipeViewFragment">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/title_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/recipe_title"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/text_margin"
                android:layout_weight="1"
                android:text="RecipeTitle"
                android:textSize="24dp" />

            <TextView
                android:id="@+id/recipe_author"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/text_margin"
                android:layout_weight="1"
                android:text="RecipeAuthor"
                android:textSize="24dp" />
        </LinearLayout>
        <TextView
            android:id="@+id/recipe_difficulty"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/text_margin"
            android:text="RecipeDifficulty"
            android:textSize="24dp" />
        <TextView
            android:id="@+id/recipe_instructions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title_layout"
            android:layout_margin="@dimen/text_margin"
            android:text="RecipeInstructions"
            android:textSize="24dp" />
    </LinearLayout>
</androidx.core.widget.NestedScrollView>